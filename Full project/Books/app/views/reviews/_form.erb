<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
  <div id="rating-form">
    <label>Рейтинг </label>
  </div>
  <%= f.input :comment, label: "Комментарий" %>
  <%= f.button :submit, "Опубликовать", :class => 'btn-custom2' %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>