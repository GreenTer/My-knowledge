<h1 class="current-category"><%= params[:category] %></h1>

<% if @book.count == 0 %>

  <h1>К сожалению в этом жанре книг нет..</h1>

<% else %>

  <div class="row">

    <% @book.each do |book| %>

      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_img.url(:book_index), class: "book" %>
        </a>
      </div>

    <% end %>

  </div>
  
<% end %>